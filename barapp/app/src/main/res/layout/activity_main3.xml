<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/detail_btn"
        android:layout_width="102dp"
        android:layout_height="55dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="1dp"
        android:text="詳細內容"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="162dp"
        android:layout_height="167dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="261dp"
        android:text="我要登出"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/order_btn"
        android:layout_width="162dp"
        android:layout_height="81dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="108dp"
        android:text="客製化點酒"
        app:layout_constraintStart_toEndOf="@+id/logout_btn"
        app:layout_constraintTop_toBottomOf="@+id/detail_btn" />

    <Button
        android:id="@+id/speech_btn"
        android:layout_width="112dp"
        android:layout_height="106dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="70dp"
        android:text="語音服務"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout_btn" />

    <TextView
        android:id="@+id/username"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="49dp"
        android:text="username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="44dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/menu_btn"
        android:layout_width="164dp"
        android:layout_height="76dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="9dp"
        android:text="酒單"
        app:layout_constraintStart_toEndOf="@+id/logout_btn"
        app:layout_constraintTop_toBottomOf="@+id/order_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="232dp"
        android:text="已付金額:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>